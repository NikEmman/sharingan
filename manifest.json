{
  "manifest_version": 3,
  "name": "Sharingan",
  "version": "1.0",
  "description": "Adds a browser action icon to the toolbar. Click the button to copy current page's html and export it to a file",
  "homepage_url": "https://github.com/NikEmman/sharingan",

  "icons": {
    "48": "icons/sharingan-48.png"
  },
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": {
      "32": "icons/sharingan-32.png"
    },
    "default_title": "sharingan",
    "default_popup": "popup/popup.html"
  },

  "permissions": ["activeTab", "downloads", "scripting", "notifications"],

  "host_permissions": ["<all_urls>"]
}
